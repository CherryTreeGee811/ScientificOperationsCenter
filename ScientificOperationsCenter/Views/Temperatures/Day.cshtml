@{
    Layout = "_Layout";
    ViewData["Title"] = "temperatures";
}

<div class="row">
    <h1>Temperatures throughout Day</h1>
</div>
<table class="table">
    <thead>
        <tr class="bg-primary">
            <th>Hour</th>
            <th>Average Temperature (Celcius)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Hour</td>
                <td>@item.AverageTemperature</td>
            </tr>
        }
    </tbody>
</table>